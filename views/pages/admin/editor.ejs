<!DOCTYPE html>
<html lang="da">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Admin</title>
        <link rel="stylesheet" href="/css/admin.css">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    </head>
    <body>
        <nav id="cmsSideNav">
            <!-- navigation placed here -->
        </nav>
        <main id="cmsMain">
            <div id="cmsHeader">
                <h1 id="cmsHeaderTitle">
                    Redaktører
                </h1>
                <div id="cmsHeaderUser">
                    <span id="cmsHeaderUsername">
                        admin
                    </span>
                    <ul id="cmsHeaderDrop">
                        <li class="cmsHeaderDropItem">
                            <a class="cmsHeaderDropLink" href="/admin/user/settings">
                                Indstillinger
                            </a>
                        </li>
                        <li class="cmsHeaderDropItem">
                            <span class="cmsHeaderDropLink" id="userLogOut">
                                Log ud
                            </span>
                        </li>
                    </ul>
                </div>
            </div>
            <span id="adminButtonSpan">
                <a id="articleAdd" class="addBtn" href="/admin/add/editor">
                    <i class="fas fa-plus"></i>
                    Tilføj redaktør
                </a>
            </span>
            <h2 class="adminArtCatTit" id="adminArtCatTit">
                Alle redaktøre
            </h2>
            <ul id="adminArticleList" class="adminArticleList">
                <!-- all editors placed here -->
            </ul>

            <div id="editEdiCon">
                <!-- edit editor placed here -->
            </div>
        </main>
        <script src="/js/admin_editor.js"></script>
        <script src="/js/admin_styling.js"></script>
    </body>
</html>